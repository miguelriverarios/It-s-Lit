{{#extend 'main'}}
{{#content 'body'}}
<main id="events">
    <section class="hero">
        <img class="hero__image square-corner" src="../../images/events-hero.jpg" />
        <h1 class="hero__title on-dark-background-color large-text">
            Upcoming Events
        </h1>
    </section>

    {{#if payload}}

    {{#each payload}}
    <section
        class="{{evenOrOdd @index}} {{ifElse (isOdd @index) true 'exactlyEquals' 'primary-background on-dark-background-color' ''}}">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <h2>{{title}}</h2>
                </div>
            </div>
            <div class="row">
                <div class="col s3 left-align">
                    <section>
                        {{#if surroundingImages.[0]}}
                        <img class="floating-image image" src="{{surroundingImages.[0]}}" />
                        {{/if}}
                    </section>

                </div>
                <div class="col s12 m6 details-container">
                    <a class="redirect" data-target="{{purchaseLink}}">
                        <div class="details">

                            <p>{{date}} &mdash; {{time}}</p>

                            {{#each description}}
                            <p>{{this}}</p>
                            {{/each}}

                        </div>
                    </a>
                </div>
                <div class="col s3 right-align">
                    <section>
                        {{#if surroundingImages.[1]}}
                        <img class="floating-image image" src="{{surroundingImages.[1]}}" />
                        {{/if}}
                    </section>
                </div>
                <div class="col s12">
                    <section class="main-image">
                        <a class="btn share-btn btn-floating btn-large waves-effect waves-light modal-trigger"
                            href="#share-event"><i class="fas fa-share-alt"></i></a>
                        <img class="event-image {{ifElse isGif true 'equals' 'gif' ''}} {{@index}}"
                            src="{{mainImage}}" />

                        <div class="background-lines">
                            <div class="one"></div>
                            <div class="two"></div>
                            <div class="three"></div>
                            <div class="four"></div>
                            <div class="five"></div>
                        </div>

                        <a class="btn purchase-btn btn-floating btn-large waves-effect waves-light"
                            href="{{purchaseLink}}"><i class="fas fa-shopping-cart"></i></a>
                    </section>

                </div>

                <div class="col s6 center-align">
                    <section>
                        {{#if surroundingImages.[2]}}
                        <img class="floating-image image" src="{{surroundingImages.[2]}}" />
                        {{/if}}
                    </section>

                </div>
                <div class="col s6 center-align">
                    <section>
                        {{#if surroundingImages.[3]}}
                        <img class="floating-image image" src="{{surroundingImages.[3]}}" />
                        {{/if}}
                    </section>
                </div>
            </div>
        </div>
    </section>

    <div id="share-event" class="modal">
        <div class="modal-content share-modal">
            <ul class="collection with-header flow-text">
                <li class="collection-header">
                    <h4>Share the Event</h4>
                </li>
                <li id="facebook" class="collection-item"><a class="fab fa-facebook-f"></a>
                    <span class="mdc-list-item__text">FACEBOOK</span>
                </li>
                <li id="twitter" class="collection-item"><a class="fab fa-twitter"></a>
                    <span class="mdc-list-item__text">TWITTER</span>
                </li>
                <li id="mail" class="collection-item"><a class="fas fa-envelope"></a>
                    <span class="mdc-list-item__text">EMAIL</span>
                </li>
                <li id="clipboard" class="collection-item"><a class="fas fa-copy"></a>
                    <span class="mdc-list-item__text">COPY TO CLIPBOARD</span>
                </li>
            </ul>
        </div>
    </div>
    {{/each}}

    {{else}}

    <div class="container">
        <div class="row no-events">
            <div class="col s12">

                <h1>
                    We don't have any events coming up any time soon, but check back often to see what we've got coming
                    up.
                </h1>

                <a href="#subscription-form">
                    <p>(Alternatively, you can join or newsletter using the form below to get updates sent to your
                        inbox.)
                    </p>
                </a>

                <p>Engage with us on social media if you have any thoughts for future events (or if you just want to
                    checkin):</p>

                <p>
                    <a href="https://www.instagram.com/itsliteraturebookclub_/"><i
                            class="fab fa-instagram"></i></a>&nbsp;
                    {{!-- <a href="https://www.facebook.com/LAUXtheauthor/"><i class="fab fa-facebook-f"></i></a>&nbsp;
                    <a href="https://twitter.com/LauxTheauthor"><i class="fab fa-twitter"></i></a> --}}
                </p>
            </div>

        </div>
    </div>
    {{/if}}
</main>
{{/content}}
{{/extend}}